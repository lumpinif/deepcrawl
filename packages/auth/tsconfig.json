{
  "extends": "@deepcrawl/typescript-config/base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "verbatimModuleSyntax": true,
    "moduleResolution": "Bundler",
    "types": ["node"],
    "paths": {
      "@deepcrawl/auth/*": ["./src/*"]
    }
  },
  "include": [".", "src"],
  "exclude": ["node_modules", "dist"]
}
