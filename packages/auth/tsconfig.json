{
  "extends": "@deepcrawl/typescript-config/base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "target": "ESNext",
    "lib": ["ESNext"],
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "resolveJsonModule": true,
    "jsx": "preserve",
    "paths": {
      "@deepcrawl/auth/*": ["./src/*"]
    }
  },
  "include": [".", "src"],
  "exclude": ["node_modules", "dist"]
}
