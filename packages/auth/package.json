{
  "name": "@deepcrawl/auth",
  "version": "0.0.1",
  "private": true,
  "description": "Authentication package for @deepcrawl",
  "main": "index.ts",
  "author": "deepcrawl.ai - Felix",
  "license": "MIT",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "check": "biome check --write && pnpm typecheck",
    "auth:generate": "dotenv -e ../../apps/app/.env.development.local -- pnpm dlx @better-auth/cli@latest generate --output ../db/db-auth/src/db/schema.ts -y && biome check ../db/db-auth/src/db/schema.ts --write && turbo typecheck --filter=@deepcrawl/db-auth",
    "email:dev": "email dev --dir src/templates",
    "email:export": "email export --dir src/templates"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "keywords": [
    "deepcrawl",
    "auth",
    "authentication"
  ],
  "dependencies": {
    "@react-email/components": "^0.5.3",
    "better-auth-harmony": "^1.2.5",
    "react": "^19.1.1",
    "react-email": "^4.2.11",
    "resend": "^6.1.0"
  },
  "devDependencies": {
    "@deepcrawl/db-auth": "workspace:*",
    "@deepcrawl/typescript-config": "workspace:*",
    "@react-email/preview-server": "^4.2.11",
    "@types/node": "^20",
    "@types/react": "^19.1.13"
  }
}
