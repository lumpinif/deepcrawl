{
  "name": "@deepcrawl/auth",
  "version": "0.0.1",
  "description": "Authentication package for @deepcrawl",
  "main": "index.ts",
  "author": "deepcrawl.ai - Felix",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "check": "biome check --write && pnpm typecheck",
    "auth:generate": "dotenv -e ../../apps/app/.env.development.local -- pnpm dlx @better-auth/cli@latest generate --output ../db/src/db/schema.ts -y && pnpm biome format --write ../db/src/db/schema.ts",
    "auth:generate:prod": "dotenv -e ../../apps/app/.env -- pnpm dlx @better-auth/cli@latest generate --output ../db/src/db/schema.ts -y && pnpm biome format --write ../db/src/db/schema.ts",
    "email:dev": "email dev --dir src/templates",
    "email:export": "email export --dir src/templates"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "keywords": ["deepcrawl", "auth", "authentication"],
  "dependencies": {
    "@react-email/components": "^0.0.42",
    "@react-email/render": "^1.1.2",
    "@types/react": "^19.1.5",
    "better-auth": "^1.2.9",
    "react": "^19.1.0",
    "react-email": "^4.0.16",
    "resend": "^4.6.0"
  },
  "devDependencies": {
    "@deepcrawl/db": "workspace:*",
    "@deepcrawl/typescript-config": "workspace:*",
    "@types/node": "^20",
    "dotenv-cli": "^8.0.0"
  }
}
