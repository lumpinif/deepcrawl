{
  "extends": "@deepcrawl/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@deepcrawl/types/*": ["../../types/src/*"],
      "@deepcrawl/contracts/*": ["../../contracts/src/*"]
    }
  },
  "references": [
    {
      "path": "../../types"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
