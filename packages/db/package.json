{
  "name": "@deepcrawl/db",
  "version": "0.0.1",
  "description": "Database package for @deepcrawl",
  "main": "index.ts",
  "author": "deepcrawl.ai - Felix",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "check": "biome check . --write && pnpm typecheck",
    "db:push": "pnpm drizzle-kit push",
    "db:studio": "pnpm drizzle-kit studio",
    "db:generate": "pnpm drizzle-kit generate",
    "db:migrate": "pnpm drizzle-kit migrate",
    "db:migrate:prod": "pnpm drizzle-kit migrate --config=drizzle.prod.config.ts",
    "db:pre-deploy": "pnpm run db:generate && pnpm run db:migrate:prod"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "keywords": ["deepcrawl", "db", "database"],
  "devDependencies": {
    "@deepcrawl/typescript-config": "workspace:*",
    "@types/node": "^20",
    "drizzle-kit": "^0.31.1"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "drizzle-orm": "^0.44.1"
  }
}
