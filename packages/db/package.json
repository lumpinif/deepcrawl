{
  "name": "@deepcrawl/db",
  "version": "0.0.1",
  "description": "Database package for @deepcrawl",
  "main": "index.ts",
  "author": "deepcrawl.ai - Felix",
  "scripts": {
    "lint": "biome lint --write .",
    "lint:fix": "biome lint --write --unsafe",
    "format": "biome format --write .",
    "check": "biome check . --write",
    "fix": "pnpm lint && pnpm format && pnpm check",
    "typecheck": "tsc --noEmit",
    "db:push": "pnpm drizzle-kit push",
    "db:studio": "pnpm drizzle-kit studio",
    "db:generate": "pnpm drizzle-kit generate",
    "db:migrate": "dotenv -e ../../.env -- pnpm drizzle-kit migrate",
    "db:migrate:prod": "dotenv -e ../../.env -- pnpm drizzle-kit migrate --config=drizzle.prod.config.ts",
    "db:pre-deploy": "dotenv -e ../../.env -- pnpm run db:generate && pnpm run db:migrate:prod"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "keywords": ["deepcrawl", "db", "database"],
  "devDependencies": {
    "@deepcrawl/typescript-config": "workspace:*",
    "@deepcrawl/auth": "workspace:*",
    "@types/node": "20.8.3",
    "drizzle-kit": "^0.31.1"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "drizzle-orm": "^0.44.1"
  }
}
