{
  "name": "deepcrawl-worker-v0",
  "version": "0.0.1",
  "scripts": {
    "dev": "wrangler dev --remote --env=development",
    "dev:staging": "wrangler dev --remote --env=staging",
    "dev:prod": "wrangler dev --remote",
    "deploy": "pnpm fix && wrangler deploy",
    "antFu:lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "mdlint": "markdownlint-cli2 --config .markdownlint-cli2.jsonc --fix",
    "check": "biome check --write && pnpm mdlint && pnpm typecheck",
    "cf-typegen": "wrangler types --env-interface=CloudflareBindings && pnpm typecheck",
    "openapi": "curl http://localhost:8787/openapi -o openapi.json && biome format --write openapi.json"
  },
  "dependencies": {
    "@cloudflare/puppeteer": "^0.0.15",
    "@deepcrawl/types": "workspace:*",
    "@hono-rate-limiter/cloudflare": "^0.2.2",
    "@hono/zod-openapi": "^0.19.6",
    "@hono/zod-validator": "^0.5.0",
    "@paoramen/cheer-reader": "npm:@jsr/paoramen__cheer-reader@^0.1.2",
    "@scalar/hono-api-reference": "^0.9.1",
    "@scalar/openapi-to-markdown": "^0.2.2",
    "cheerio": "^1.0.0",
    "hono": "^4.7.10",
    "hono-pino": "^0.8.0",
    "hono-rate-limiter": "^0.4.2",
    "htmlparser2": "^10.0.0",
    "node-html-markdown": "^1.3.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "stoker": "^1.4.2",
    "xss": "^1.0.15",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@deepcrawl/typescript-config": "workspace:*",
    "@mozilla/readability": "^0.6.0",
    "@types/node": "20.8.3",
    "@types/turndown": "^5.0.5",
    "eslint-plugin-format": "^1.0.1",
    "turndown": "^7.2.0",
    "wrangler": "^4.6.0"
  },
  "overrides": {
    "@types/node": "20.8.3"
  }
}
