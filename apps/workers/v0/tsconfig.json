{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["ESNext", "DOM"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["src/*"],
      "@deepcrawl/db/*": ["../../../packages/db/src/*"],
      "@deepcrawl/auth/*": ["../../../packages/auth/src/*"],
      "@deepcrawl/types/*": ["../../../packages/types/src/*"]
    },
    "types": ["./worker-configuration.d.ts", "node"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  }
}
