{
  "name": "@deepcrawl-worker/deepcrawl-v0",
  "scripts": {
    "dev": "wrangler dev --remote",
    "deploy": "pnpm fix && wrangler deploy",
    "lint": "biome lint",
    "antFu:lint": "eslint .",
    "format": "biome format --write",
    "check": "biome check --write --unsafe",
    "lint:fix": "biome lint --write --unsafe",
    "mdlint": "markdownlint-cli2 --config .markdownlint-cli2.jsonc --fix",
    "typecheck": "tsc --noEmit",
    "fix": "pnpm lint && pnpm format && pnpm check && pnpm mdlint && pnpm typecheck",
    "cf-typegen": "wrangler types --env-interface=CloudflareBindings && pnpm typecheck"
  },
  "dependencies": {
    "@cloudflare/puppeteer": "^0.0.15",
    "@deepcrawl-worker/supabase": "workspace:*",
    "@deepcrawl-worker/types": "workspace:*",
    "@hono-rate-limiter/cloudflare": "^0.2.2",
    "@hono/zod-validator": "^0.4.3",
    "@paoramen/cheer-reader": "npm:@jsr/paoramen__cheer-reader@^0.1.2",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.49.1",
    "cheerio": "^1.0.0",
    "hono": "^4.7.2",
    "hono-rate-limiter": "^0.4.2",
    "htmlparser2": "^10.0.0",
    "node-html-markdown": "^1.3.0",
    "xss": "^1.0.15",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.3"
  },
  "devDependencies": {
    "@mozilla/readability": "^0.5.0",
    "@types/node": "20.8.3",
    "@types/turndown": "^5.0.5",
    "eslint-plugin-format": "^1.0.1",
    "turndown": "^7.2.0",
    "wrangler": "^4.6.0"
  },
  "overrides": {
    "@types/node": "20.8.3"
  }
}
