{
  "name": "deepcrawl_dispatcher",
  "scripts": {
    "dev": "wrangler dev --remote",
    "deploy": "pnpm run cf-typegen && wrangler secret bulk .dev.vars.production && wrangler deploy --minify",
    "typecheck": "tsc --noEmit",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings && pnpm typecheck",
    "db:generate": "pnpm drizzle-kit generate",
    "db:migrate": "pnpm drizzle-kit migrate",
    "db:push": "pnpm drizzle-kit push",
    "db:studio": "pnpm drizzle-kit studio",
    "format": "biome format --write",
    "auth:generate": "pnpm dlx @better-auth/cli@latest generate --config ./src/lib/better-auth/cli.config.ts --output ./src/db/schema.ts -y && pnpm format"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "better-auth": "^1.2.8",
    "drizzle-orm": "^0.44.1",
    "hono": "^4.7.10"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250531.0",
    "drizzle-kit": "^0.31.1",
    "wrangler": "^4.18.0"
  }
}
