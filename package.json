{
  "name": "deepcrawl",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Felix Lu",
    "url": "https://x.com/felixlu1018"
  },
  "workspaces": [
    "apps/*",
    "apps/workers/*",
    "packages/*",
    "packages/db/db-auth",
    "packages/db/db-d1",
    "packages/sdks/js-ts"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "sherif": "pnpm dlx sherif@latest",
    "sherif:fix": "pnpm dlx sherif@latest --fix -i @types/node",
    "typecheck": "turbo typecheck",
    "check": "pnpm install && turbo check && pnpm sherif:fix",
    "clean": "cd scripts && npx tsx clean.ts",
    "clean:install": "cd scripts && npx tsx clean.ts && pnpm install",
    "prepare": "husky",
    "changeset": "changeset",
    "cv": "changeset version",
    "release": "changeset publish",
    "sdk-ts:build": "pnpm --filter=deepcrawl build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@deepcrawl/typescript-config": "workspace:*",
    "@orpc/client": "^1.8.7",
    "@orpc/contract": "^1.8.7",
    "@orpc/json-schema": "^1.8.7",
    "@orpc/openapi": "^1.8.7",
    "@orpc/openapi-client": "^1.8.7",
    "@orpc/server": "^1.8.7",
    "@orpc/zod": "^1.8.7",
    "better-auth": "^1.3.27",
    "dotenv-cli": "^10.0.0",
    "hono": "^4.10.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.5",
    "rimraf": "^6.0.1",
    "shadcn": "^3.4.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "wrangler": "^4.45.0",
    "zod": "^4.1.12"
  },
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "@vercel/speed-insights",
      "better-sqlite3",
      "core-js-pure",
      "esbuild",
      "msw",
      "sharp",
      "unrs-resolver",
      "vue-demi",
      "workerd"
    ]
  }
}
