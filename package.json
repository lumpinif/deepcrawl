{
  "name": "deepcrawl",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:dashboard": "turbo dev --filter=dashboard --filter=deepcrawl_auth",
    "sherif": "pnpm dlx sherif@latest",
    "sherif:fix": "pnpm dlx sherif@latest --fix -i @types/node",
    "typecheck": "turbo typecheck",
    "check": "turbo check && turbo check && pnpm sherif:fix"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@deepcrawl/typescript-config": "workspace:*",
    "better-auth": "^1.2.12",
    "dotenv-cli": "^8.0.0",
    "turbo": "^2.4.2",
    "typescript": "5.7.3",
    "wrangler": "^4.23.0"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=20"
  }
}