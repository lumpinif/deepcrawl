{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": ["**/.env*", "**/tsconfig*.json"],
  "globalEnv": [
    "DATABASE_URL",
    "DATABASE_URL_PROD",
    "BETTER_AUTH_URL",
    "BETTER_AUTH_SECRET"
  ],
  "tasks": {
    "auth:generate": {
      "env": ["DATABASE_URL", "BETTER_AUTH_URL", "BETTER_AUTH_SECRET"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [],
      "cache": true
    },
    "format": {
      "dependsOn": ["^format"],
      "outputs": [],
      "cache": true
    },
    "check": {
      "dependsOn": ["^check"],
      "outputs": [],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [],
      "cache": true
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "outputs": [],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": []
    }
  }
}
